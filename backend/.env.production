# Production Environment Variables Template
# Copy this to .env and update with your production values

# SECURITY - CRITICAL: Generate a strong secret key for production!
DJANGO_SECRET_KEY=your-very-secure-secret-key-here-minimum-50-characters-long

# Environment
DEBUG=0
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database - Use managed database in production
DATABASE_URL=postgres://username:password@host:port/database

# Email Configuration (for notifications and reports)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.yourmailprovider.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@domain.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# File Storage (use S3 or similar for production)
# Uncomment and configure for S3/DigitalOcean Spaces
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=your-region
# USE_S3=True

# Media and Static Files
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/staticfiles

# CORS (if frontend is on different domain)
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=INFO

# Performance
CONN_MAX_AGE=600